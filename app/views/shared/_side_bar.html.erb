
<div class='side-bar'>
  <%= link_to root_path do %>
    <%= image_tag "logo.png" %>

  <% end %>

  <%= link_to received_invoices_path do %>
    <div class="inv-type">
      <div class="icon">
        <i class="fa fa-arrow-down" aria-hidden="true"></i>
      </div>
      <h3>Factures Entrantes</h3>
    </div>
  <% end %>

  <div>
    <%= link_to(received_invoices_path(status: "received")) do %>
      <div  class="small-box">
        <%# <i class="fas fa-arrow-alt-circle-down"></i> %>
        <div class="icon">
          <i class="fas fa-thumbtack"></i>
        </div>
        <p>En attente</p>
      </div>
    <%end %>

    <%= link_to (received_invoices_path(status: "validated")) do %>
      <div  class="small-box">
        <div class="icon">
          <i class="fas fa-check-circle"></i>
        </div>
        <p>Validées</p>
      </div>
    <% end %>


    <%= link_to (received_invoices_path(status: "declined")) do %>
      <div  class="small-box">
        <div class="icon">
          <i class="fas fa-times-circle"></i>
        </div>
        <p> Refusées</p>
      </div>
    <% end %>

    <%= link_to (received_invoices_path(status: "payment in process")) do %>
      <div  class="small-box">
        <%# <i class="fas fa-hand-holding-usd"></i> %>
        <div class="icon">
          <i class="fas fa-ellipsis-h"></i>
        </div>
        <p>En attente de paiement</p>
      </div>
    <% end %>

    <%= link_to (received_invoices_path(status: "paid"))do %>
      <div  class="small-box">
        <div class="icon">
          <i class="fas fa-dollar-sign"></i>
        </div>
        <p>Payées</p>
      </div>
    <% end %>


  </div>

  <br>
  <br>

  <div>

    <%= link_to sent_invoices_path do %>
      <div class="inv-type">
        <div class="icon">
          <i class="fas fa-share-square"></i>
        </div>
        <h3>Factures sortantes</h3>
      </div>
    <% end %>

    <%= link_to (sent_invoices_path(status: "created")) do %>
      <div class="small-box">
        <div class="icon">
          <i class="fas fa-file-invoice-dollar"></i>
        </div>
        <p>Créées</p>
      </div>
    <% end %>

    <%= link_to (sent_invoices_path(status: "sent")) do %>
      <div class="small-box">
        <div class="icon">
          <i class="far fa-paper-plane"></i>
        </div>
        <p>Envoyées</p>
      </div>
    <% end %>

    <%= link_to (sent_invoices_path(status: "paid")) do %>
      <div class="small-box">
        <div class="icon">
          <i class="fas fa-dollar-sign"></i>
        </div>
        <p>Payées</p>
      </div>
    <% end %>

    <%= link_to (sent_invoices_path(status: "follow_uped")) do %>
      <div class="small-box">
        <div class="icon">
          <i class="far fa-clock"></i>
        </div>
        <p>En retard de paiement</p>
      </div>
    <% end %>


  </div>


  <br>
  <br>

  <div class="search-bar">
    <h3> Recherche </h3>

    <p>Client/fournisseur</p>


    <p>Statut de la facture</p>

    <p>Date</p>


  </div>

</div>
