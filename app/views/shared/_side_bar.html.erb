
<div class='side-bar'>
  <div id="logo-sidebar">
    <%= link_to root_path do %>
      <%= image_tag "logo.png" %>
    <% end %>
  </div>


  <%= link_to received_invoices_path do %>
    <div class="inv-type">
      <div class="icon">
        <i class="fa fa-arrow-down" aria-hidden="true"></i>
      </div>
      <h3>Factures entrantes</h3>
    </div>
  <% end %>

  <div>
    <%= link_to(received_invoices_path(status: "received")) do %>
      <div  class="small-box">
        <%# <i class="fas fa-arrow-alt-circle-down"></i> %>
        <div class="icon">
          <i class="fas fa-thumbtack"></i>
        </div>
        <p>En attente</p>
      </div>
    <%end %>

    <%= link_to (received_invoices_path(status: "validated")) do %>
      <div  class="small-box">
        <div class="icon">
          <i class="fas fa-check-circle"></i>
        </div>
        <p>Validées</p>
      </div>
    <% end %>


    <%= link_to (received_invoices_path(status: "declined")) do %>
      <div  class="small-box">
        <div class="icon">
          <i class="fas fa-times-circle"></i>
        </div>
        <p> Refusées</p>
      </div>
    <% end %>

    <%= link_to (received_invoices_path(status: "payment in process")) do %>
      <div  class="small-box">
        <%# <i class="fas fa-hand-holding-usd"></i> %>
        <div class="icon">
          <i class="fas fa-ellipsis-h"></i>
        </div>
        <p>En attente de paiement</p>
      </div>
    <% end %>

    <%= link_to (received_invoices_path(status: "paid"))do %>
      <div  class="small-box">
        <div class="icon">
          <i class="fas fa-dollar-sign"></i>
        </div>
        <p>Payées</p>
      </div>
    <% end %>
  </div>

  <div>
    <%= link_to sent_invoices_path do %>
      <div class="inv-type">
        <div class="icon">
          <i class="fas fa-share-square"></i>
        </div>
        <h3>Factures sortantes</h3>
      </div>
    <% end %>

    <%= link_to (sent_invoices_path(status: "created")) do %>
      <div class="small-box">
        <div class="icon">
          <i class="fas fa-file-invoice-dollar"></i>
        </div>
        <p>Créées</p>
      </div>
    <% end %>

    <%= link_to (sent_invoices_path(status: "sent")) do %>
      <div class="small-box">
        <div class="icon">
          <i class="far fa-paper-plane"></i>
        </div>
        <p>Envoyées</p>
      </div>
    <% end %>

    <%= link_to (sent_invoices_path(status: "paid")) do %>
      <div class="small-box">
        <div class="icon">
          <i class="fas fa-dollar-sign"></i>
        </div>
        <p>Payées</p>
      </div>
    <% end %>

    <%= link_to (sent_invoices_path(status: "follow_uped")) do %>
      <div class="small-box">
        <div class="icon">
          <i class="far fa-clock"></i>
        </div>
        <p>En retard de paiement</p>
      </div>
    <% end %>

  </div>




    <h3> Recherche </h3>

      <div class="search-bar">
      <%= form_tag sent_invoices_path, method: :get do %>
        <%= text_field_tag :query_client,
          params[:query_client],
          class: "form-control",
          placeholder: "Find a client"
        %>
        <br>

        <%= text_field_tag :query_status,
          params[:query_status],
          class: "form-control",
          placeholder: "Status"
        %>
        <br>
        <%= text_field_tag :query_date,
          params[:query_date],
          class: "form-control",
          placeholder: "Date"
          # data-provide :'datepicker'
        %>
        <br>
        <%= submit_tag "Rechercher", class: "btn btn-primary" %>
      <% end %>
  </div>

</div>
